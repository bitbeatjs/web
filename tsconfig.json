{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Bitbeat",
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "outDir": ".",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2015",
        "types": ["node"]
    },
    "exclude": ["./node_modules"],
    "files": [
        "./index.ts",
        "./webAction.ts",
        "./webActionMiddleware.ts",
        "./webConnection.ts",
        "./webConnectionMiddleware.ts"
    ],
    "include": ["./actions", "./config", "./servers"]
}

  "devDependencies": {
    "@bitbeat/core": "^0.0.4",
    "@types/debug": "^4.1.5",
    "@types/ioredis": "^4.17.3",
    "@types/lodash": "^4.14.160",
    "@types/node": "^14.6.1",
    "@types/node-cron": "^2.0.3",
